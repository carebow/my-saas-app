FROM python:3.11-slim

RUN pip install fastapi uvicorn

WORKDIR /app

COPY <<'PY' /app/main.py
from fastapi import FastAPI

app = FastAPI()

@app.get('/healthz')
async def healthz():
    return {"ok": True}

@app.get('/')
async def root():
    return {"message": "Minimal API - Infrastructure Test", "status": "healthy"}
PY

EXPOSE 8080

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8080"]